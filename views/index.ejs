<div class="author">
    <h1 class="author__heading">Hi, I am Matthew</h1>

    <p class="author__body">Software Developer and Writer</p>
</div>

<img
    src="/img/alexandre-saraiva-carniato.jpg"
    alt="person looking at the beach"
    class="hero-image"
    width="980"
/>

<section class="articles">
    <h2 class="articles__heading">Latest Posts</h2>

    <ul class="article-ul">
        <% data.forEach(post => { %>
        <li>
            <a href="/post/<%= post._id %>">
                <span><%= post.title %></span>
                <span class="article-list__date"
                    ><%= post.createdAt.toDateString() %></span
                >
            </a>
        </li>
        <% }) %>
    </ul>

    <% if (nextPage !== null) { %>
    <a href="/?page=<%= nextPage %>" class="pagination"
        >&lt; View Older Posts</a
    >
    <% } %>
</section>
