<div class="author">
    <h1 class="author__heading">Search Results</h1>
</div>

<section class="articles">
    <ul class="article-ul">
        <% if (!data.length) { %>
        <p>No posts match the search term: <%= searchNoSpecialChar %></p>
        <% } %>
        <br />
        <% data.forEach(post => { %>
        <li>
            <a href="/post/<%= post._id %>">
                <span><%= post.title %></span>
                <span class="article-list__date"
                    ><%= post.createdAt.toDateString() %></span
                >
            </a>
        </li>
        <% }) %>
    </ul>
</section>
